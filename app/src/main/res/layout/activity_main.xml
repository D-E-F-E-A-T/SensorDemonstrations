<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00E5FF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Menu" >

    <Button
        android:id="@+id/btProximidade"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_margin="5sp"
        android:background="#0C0C0C"
        android:fontFamily="@font/supermario"
        android:padding="10sp"
        android:paddingTop="10sp"
        android:text="@string/sensor_de_proximidade"
        android:textColor="#ECE9EA" />

    <Button
        android:id="@+id/btAcelerometro"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_margin="5sp"
        android:background="#0C0C0C"
        android:fontFamily="@font/supermario"
        android:padding="10sp"
        android:paddingTop="10sp"
        android:text="@string/sensor_de_acelerometro"
        android:textColor="#ECE9EA" />

    <Button
        android:id="@+id/btLuz"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_margin="5sp"
        android:background="#0C0C0C"
        android:fontFamily="@font/supermario"
        android:padding="10sp"
        android:paddingTop="10sp"
        android:text="@string/sensor_de_luz"
        android:textColor="#ECE9EA" />

    <Button
        android:id="@+id/btGiroscopio"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_margin="5sp"
        android:background="#0C0C0C"
        android:fontFamily="@font/supermario"
        android:padding="10sp"
        android:paddingTop="10sp"
        android:text="@string/sensor_giroscopio"
        android:textColor="#ECE9EA" />
</LinearLayout>